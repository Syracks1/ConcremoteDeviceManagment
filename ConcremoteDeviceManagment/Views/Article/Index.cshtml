@model IEnumerable<ConcremoteDeviceManagment.Models.Pricelist>

@{
    ViewBag.Title = "Prijslijst";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prijslijst</h2>
@using (Html.BeginForm("Index", "Article", FormMethod.Get))
{
<p>
    <b>CMI: </b>@Html.TextBox("PriceCMI")
    <input type="submit" value="Zoek CMI" class="btn" />
    @*<b>Leverancier:</b> @Html.DropDownList("SelectedLeverancier", new SelectList(ViewBag.SelectedLeverancier), "Selecteer iets")*@
    <b>Leverancier:</b>@Html.DropDownList("SelectedLeverancier", new SelectList(ViewBag.SelectedLeverancier), "Kies Leverancier")

    <input type="submit" value="Zoek" class="btn" />
    <button onclick="location.href='@Url.Action("Create", "Article")';return false;" class="btn btn-primary">Create New</button>
</p>
}
<table class="table table-hover">
    <tr>
        <th>
            @Html.ActionLink("BAS CMI", "Index", new { sortOrder = ViewBag.CMISortParm })
        </th>
        <th>
            @Html.ActionLink("Leverancier Artikelnummer", "Index", new { sortOrder = ViewBag.ArtSortParm })
        </th>
        <th>
            @Html.ActionLink("Leverancier", "Index", new { sortOrder = ViewBag.LevSortParm })
        </th>
        <th>
            @Html.ActionLink("Prijs", "Index", new { sortOrder = ViewBag.PriceSortParm })
        </th>
        <th>
            @Html.ActionLink("Beschrijving", "Index", new { sortOrder = ViewBag.DescrSortParm })
        </th>
        <th>
            @Html.ActionLink("Actief", "Index", new { sortOrder = ViewBag.ActiveSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.bas_art_nr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.art_lev_nr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leverancier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <button onclick="location.href='@Url.Action("Edit", "Article", new { id=item.Price_id})';return false;" class="btn btn-primary">Edit</button>
                <button onclick="location.href='@Url.Action("Details", "Article", new { id=item.Price_id})';return false;" class="btn btn-info">Details</button>
                <button onclick="location.href='@Url.Action("Delete", "Article", new { id=item.Price_id})';return false;" class="btn btn-danger">Delete</button>
            </td>
        </tr>
    }

</table>
