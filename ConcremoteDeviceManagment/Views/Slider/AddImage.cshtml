@model ConcremoteDeviceManagment.Models.Gallery
@{
    ViewBag.Title = "AddImage";
}

<h2>AddImage</h2>
@using (Html.BeginForm("AddImage", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    if (TempData["AlertMessage"] != null)
    {
        <p class="alert alert-danger" id="successMessage">@TempData["AlertMessage"]</p>
    }
    if (TempData["SuccesMessage"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["SuccesMessage"]</p>
    }

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <fieldset>
            <legend>Gallery</legend>

            <div class="editor-label">
                Upload Image
            </div>
            <div class="editor-field">
                <input type="file" id="ImagePath" name="ImagePath" />
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    @*<p>@Html.ActionLink("Slider Home", "Index", "Slider")</p>*@
    <button onclick="location.href='@Url.Action("Index", "Slider")';return false; " class="btn btn-primary">Slider Home</button>

}