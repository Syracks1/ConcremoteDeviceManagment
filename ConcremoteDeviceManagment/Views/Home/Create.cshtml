@model ConcremoteDeviceManagment.Models.DeviceConfig

@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 class="modal-title">Stock Create</h3>
        </div>
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Device", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.DropDownListFor(d => d.device_type_id, (IEnumerable<SelectListItem>)ViewBag.SelectedDevice, "Select a Device", new { @class = "form-control" })*@
                    @Html.DropDownList("device_type_id", (IEnumerable<SelectListItem>)ViewBag.SelectedDevice, "Select a Device", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <button class="btn btn-warning" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>

    }
}