@model IEnumerable<ConcremoteDeviceManagment.Models.Device_statustypes>

@{
    ViewBag.Title = "Device status Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Device Status Types</h2>

<p>
    @*@Html.ActionLink("Maak nieuw status", "Create")*@
    <a class="btn btn-success" data-modal="" href="~/Device_statustypes/Create" id="btnCreate">Create Device Status</a>

</p>
@if (TempData["AlertMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["AlertMessage"]</p>
}
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Status Naam")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Device_statustypes", new { id = item.id })" data-modal=""><span class="btn btn-primary">Edit</span></a>
                <a href="@Url.Action("Delete", "Device_statustypes", new { id = item.id })" data-modal=""><span class="btn btn-danger">Delete</span></a>
            </td>
        </tr>
    }
</table>
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/PopUpScripts/Stock.js")
}