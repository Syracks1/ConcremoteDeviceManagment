@model ConcremoteDeviceManagment.Models.Stock

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Stock</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Prijs ID")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price_id)
        </dd>

        <dt>
            @Html.DisplayName("BAS artikelnummer")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pricelist.bas_art_nr)
        </dd>

        <dt>
            @Html.DisplayName("Huidige voorraad")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stock_amount)
        </dd>

        <dt>
            @Html.DisplayName("Minimale voorraad")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.min_stock)
        </dd>

        <dt>
            @Html.DisplayName("Maximale voorraad")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.max_stock)
        </dd>

        <dt>
            @Html.DisplayName("Beschrijving")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pricelist.description)
        </dd>
    </dl>

    @using (Html.BeginForm("DeletePartial", "Stock", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <button onclick="location.href='@Url.Action("Index", "Stock")';return false; " class="btn btn-primary">Back to list</button>
    </div>
    }
</div>