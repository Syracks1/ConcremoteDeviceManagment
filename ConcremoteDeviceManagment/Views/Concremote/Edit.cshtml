                @Html.ValidationMessageFor(model => model.Employee_2, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Signeer datum", htmlAttributes: new { @class = "control-label col-md-2" })
