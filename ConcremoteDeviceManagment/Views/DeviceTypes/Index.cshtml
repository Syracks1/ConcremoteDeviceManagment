@model IEnumerable<ConcremoteDeviceManagment.Models.DeviceType>

@{
    ViewBag.Title = "Device Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeviceTypes</h2>
<p>
<button onclick="location.href='@Url.Action("Create", "DeviceTypes")';return false;" class="btn btn-primary">Create New</button>

    </p>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Device Naam")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <button onclick="location.href='@Url.Action("Edit", "DeviceTypes", new { id=item.device_type_id})';return false;" class="btn btn-primary">Edit</button>
                <button onclick="location.href='@Url.Action("Delete", "DeviceTypes", new { id=item.device_type_id})';return false;" class="btn btn-danger">Delete</button>
            </td>
        </tr>
    }

</table>
