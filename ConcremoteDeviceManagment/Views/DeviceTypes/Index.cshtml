@model IEnumerable<ConcremoteDeviceManagment.Models.DeviceType>

@{
    ViewBag.Title = "Device Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeviceTypes</h2>
<p>
    <a class="btn btn-success" data-modal="" href="~/DeviceTypes/Create" id="btnCreate">Create Device Type</a>
</p>
@if (TempData["AlertMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["AlertMessage"]</p>
}
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Device Naam")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                <a href="@Url.Action("Edit", "DeviceTypes", new { id = item.device_type_id })" data-modal=""><span class="btn btn-primary">Edit</span></a>
                <a href="@Url.Action("Delete", "DeviceTypes", new { id = item.device_type_id })" data-modal=""><span class="btn btn-danger">Delete</span></a>
            </td>
        </tr>
    }
</table>
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/Scripts/PopUpScripts/Stock.js")
}